<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" BackgroundImage="2_3.jpg" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="OrtoMESH.PatientPage">
	<StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
		<Label 
			Text="Witaj Mateusz!" 
			TextColor="Black"
			Margin="0,50,0,0"
			FontSize="40"
			HorizontalOptions="CenterAndExpand"
			VerticalOptions="StartAndExpand"/>
		<Label 
			Text="Twój dzień leczenia: 1"
			FontSize="25"
			HorizontalOptions="CenterAndExpand"/>
		<ProgressBar 
			HeightRequest="20"
			Margin="20,0,20,0"
			BackgroundColor="#85cefb"/>
		<Button 
			Text="Start"
			FontAttributes="Bold"
        	BackgroundColor="#85cefb"
			TextColor="White"
			Clicked="Start_Clicked"
        	BorderRadius = "100"
			WidthRequest="200"
			HeightRequest="200"
			VerticalOptions="Center"
			HorizontalOptions="Center"
			Margin="0,50,0,150"/>
		
		<StackLayout Orientation="Horizontal">
			<Button 
				Text="Patient" 
				TextColor="Black"
				FontSize="20"
				HorizontalOptions="CenterAndExpand"

				 />
			<Button 
				Text="Calendar" 
				TextColor="Black" 
				FontSize="20"
				HorizontalOptions="CenterAndExpand"
				Clicked="CalendarPage_Clicked"

				/>
		</StackLayout>
		<Button 
			Text="Back" 
			TextColor="Black"
			FontSize="20"
			Clicked="BackButton_Clicked"/>
	</StackLayout>

</ContentPage>
